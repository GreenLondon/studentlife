<?xml version='1.0' encoding='utf-8'?>
<widget id="com.studentlife.app" version="1.6" versionCode = "306" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>StudentLife</name>
    <description>
       Studentlife.com.cy
    </description>
    <author email="info@studentlife.com.cy" href="http://studentlife.com.cy">
        StudentLife Team
    </author>
    <content src="index.html" />
    <access origin="*" />
	<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	<gap:plugin name="com.adobe.plugins.gaplugin" version="2.4.0" />
	<preference name="phonegap-version" value="3.6.3" />
	<preference name="permissions" value="none"/>
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="11" />
    <preference name="android-installLocation" value="auto" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
	<preference name="StatusBarOverlaysWebView" value="false" />
	<icon src="icon.png"/>
	<!-- Android Icons -->
		<!-- Android Low Resolution -->
    	<icon src="www/res/icon/android/icon-36-ldpi.png"  gap:platform="android" gap:qualifier="ldpi"/>
		<!-- Android Medium Resolution -->
		<icon src="www/res/icon/android/icon-48-mdpi.png"  gap:platform="android" gap:qualifier="mdpi"/>
   		<!-- Android High Resolution -->
		<icon src="www/res/icon/android/icon-72-hdpi.png"  gap:platform="android" gap:qualifier="hdpi"/>
    	<!-- Android Extra High Resolution -->
		<icon src="www/res/icon/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi"/>

    <!-- iPhone 6 / 6+ -->
    <icon src="www/res/icon/ios/icon-60@3x.png" gap:platform="ios" width="180" height="180" />
	
    <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/res/icon/ios/icon-60.png" width="60" height="60" gap:platform="ios"/>
        <icon src="www/res/icon/ios/icon-60@2x.png" width="120" height="120" gap:platform="ios"/>
		
        <!-- iPad -->
        <icon src="www/res/icon/ios/icon-76.png" width="76" height="76" gap:platform="ios"/>
        <icon src="www/res/icon/ios/icon-76@2x.png" width="152" height="152" gap:platform="ios"/>
		
    <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/res/icon/ios/icon-40.png" width="40" height="40" gap:platform="ios"/>
        <icon src="www/res/icon/ios/icon-40@2x.png" width="80" height="80" gap:platform="ios"/>
        
		<!-- iPhone / iPod Touch -->
        <icon src="www/res/icon/ios/icon.png" width="57" height="57" gap:platform="ios"/>
        <icon src="www/res/icon/ios/icon@2x.png" width="114" height="114" gap:platform="ios"/>
		
        <!-- iPad -->
        <icon src="www/res/icon/ios/icon-72.png" width="72" height="72" gap:platform="ios"/>
        <icon src="www/res/icon/ios/icon-72@2x.png" width="144" height="144" gap:platform="ios"/>
		
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/res/icon/ios/icon-small.png" width="29" height="29" gap:platform="ios"/>
        <icon src="www/res/icon/ios/icon-small@2x.png" width="58" height="58" gap:platform="ios"/>
		
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/res/icon/ios/icon-50.png" width="50" height="50" gap:platform="ios"/>
        <icon src="www/res/icon/ios/icon-50@2x.png" width="100" height="100" gap:platform="ios"/>
		
	<!-- Splash Screens -->
		<!-- Android Splash Screens -->	  
	    <gap:splash gap:density="ldpi" gap:platform="android" src="www/res/screen/android/screen-ldpi-portrait.png" />
	    <gap:splash gap:density="mdpi" gap:platform="android" src="www/res/screen/android/screen-mdpi-portrait.png" />
	    <gap:splash gap:density="hdpi" gap:platform="android" src="www/res/screen/android/screen-hdpi-portrait.png" />
	    <gap:splash gap:density="xhdpi" gap:platform="android" src="www/res/screen/android/screen-xhdpi-portrait.png" />
		
		<!-- iOS Splash Screens -->
	    <gap:splash gap:platform="ios" height="480" src="www/res/screen/ios/screen-iphone-portrait.png" width="320" />
	    <gap:splash gap:platform="ios" height="960" src="www/res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
	    <gap:splash gap:platform="ios" height="1136" src="www/res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
	    <gap:splash gap:platform="ios" height="1024" src="www/res/screen/ios/screen-ipad-portrait.png" width="768" />
	    <gap:splash gap:platform="ios" height="2008" src="www/res/screen/ios/screen-ipad-portrait-2x.png" width="1536" />
	    <gap:splash gap:platform="ios" height="1334" src="www/res/screen/ios/screen-iphone-portrait-667h-2x.png" width="750" />
	    <gap:splash gap:platform="ios" height="2208" src="www/res/screen/ios/screen-iphone-portrait-736h-2x.png" width="1472" />
	
  </widget>
