<?xml version='1.0' encoding='utf-8'?>
<widget id="com.studentlife.app" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>StudentLife</name>
    <description>
       Studentlife.com.cy
    </description>
    <author email="info@studentlife.com.cy" href="http://studentlife.com.cy">
        StudentLife Team
    </author>
    <content src="index.html" />
    <access origin="*" />
	<feature name="http://api.phonegap.com/1.0/device" />
	<preference name="phonegap-version" value="3.5.0" />
	<preference name="permissions" value="none"/>
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
	 <platform name="android">
    <icon src="res/icon/android/icon-36-ldpi.png"  density="ldpi"/>
    <icon src="res/icon/android/icon-48-mdpi.png"  density="mdpi"/>
    <icon src="res/icon/android/icon-72-hdpi.png"  density="hdpi"/>
    <icon src="res/icon/android/icon-96-xhdpi.png"  density="xhdpi"/>
	 </platform>
    <platform name="wp8">
	<icon src="res/icon/wp/ApplicationIcon.png" width="99" height="99" gap:platform="winphone" />
              <!-- tile image -->
   <icon src="res/icon/wp/Background.png" width="159" height="159"  gap:platform="winphone" gap:role="background"/>
</platform>
   <platform name="windows8">
   <icon src="res/icon/windows8/logo.png" width="150" height="150" gap:platform="winphone" gap:role="background"/>
   <icon src="res/icon/windows8/smalllogo.png" width="30" height="30" gap:platform="winphone"/>
   <icon src="res/icon/windows8/storelogo.png" width="50" height="50" gap:platform="winphone" />
    </platform>
    <platform name="ios">
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="res/icon/ios/icon-60.png" width="60" height="60" gap:platform="ios"/>
              <icon src="res/icon/ios/icon-60@2x.png" width="120" height="120" gap:platform="ios"/>
              <!-- iPad -->
              <icon src="res/icon/ios/icon-76.png" width="76" height="76" gap:platform="ios"/>
              <icon src="res/icon/ios/icon-76@2x.png" width="152" height="152" gap:platform="ios"/>
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="res/icon/ios/icon-40.png" width="40" height="40" gap:platform="ios"/>
              <icon src="res/icon/ios/icon-40@2x.png" width="80" height="80" gap:platform="ios"/>
              <!-- iPhone / iPod Touch -->
              <icon src="res/ios/icon.png" width="57" height="57" gap:platform="ios"/>
              <icon src="res/ios/icon@2x.png" width="114" height="114" gap:platform="ios"/>
              <!-- iPad -->
              <icon src="res/icon/ios/icon-72.png" width="72" height="72" gap:platform="ios"/>
              <icon src="res/icon/ios/icon-72@2x.png" width="144" height="144" gap:platform="ios"/>
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="res/icon/ios/icon-small.png" width="29" height="29" gap:platform="ios"/>
              <icon src="res/icon/ios/icon-small@2x.png" width="58" height="58" gap:platform="ios"/>
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="res/icon/ios/icon-50.png" width="50" height="50" gap:platform="ios"/>
              <icon src="res/icon/ios/icon-50@2x.png" width="100" height="100" gap:platform="ios"/>
	</platform>
			  
    <gap:splash gap:density="ldpi" gap:platform="android" src="res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:density="xhdpi" gap:platform="android" src="res/screen/android/screen-xhdpi-portrait.png" />
    <gap:splash gap:platform="blackberry" src="res/screen/blackberry/screen-225.png" />
    <gap:splash gap:platform="ios" height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
	<gap:splash gap:platform="ios" height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="2008" src="res/screen/ios/screen-ipad-portrait-2x.png" width="1536" />
	<gap:splash gap:platform="winphone" height="720" src="res/screen/windows-phone/SplashScreenImage.jpg" width="1204" />
	<gap:plugin name="com.adobe.plugins.gaplugin" />
	<gap:plugin name="org.apache.cordova.splashscreen" />
  </widget>
